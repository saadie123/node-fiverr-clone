<div class="hero">
	<div class="container">
		<div class="row">
			<div class="hero-heading">
				Service for lean entrepreneur <br/>
				Find it on Threely.
				<p>Browse. Buy. Done. </p>
			</div>
		</div>
		<div class="row">
			<div class="col-md-offset-3 col-md-6">
				<form action="/search" method="POST">
					<div class="input-group input-group-lg">
						<input type="text" class="form-control" name="search" placeholder="Search for gigs...">
						<span class="input-group-btn">
							<input type="submit" class="btn btn-success" value="Find Gigs">
						</span>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<div class="container section">
	<h1>
		Newest Gigs
	</h1>
	<div class="row">
		{{#each gigs}}
		<div class="col-md-3">
			<div class="gig-card">
			<a href="/service-detail/{{id}}"><img src="{{picture}}" /></a>
				<h4>
					{{ title }}
				</h4>
				<h3>
					${{price}}
				</h3>
			</div>
		</div>
		{{/each}}
	</div>
</div>
