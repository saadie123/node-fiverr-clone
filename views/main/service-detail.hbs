<div class="container">
    <div class="row">
        <div class="col-md-7">
            <div class="overview">
                <div class="template-card">
                    <div class="name">
                        <h2 class="h2-size">{{gig.title}}</h2>
                        <hr>
                        <img src="{{gig.picture}}" class="image-test">
                    </div>
                </div>
            </div>
            <div class="overview">
                <div class="about-card">
                    <div class="name">
                        <h2 class="h2-size">Description</h2>
                        <hr>
                        <h4>{{gig.description}}</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="overview">
                <div class="order-card">
                    <div class="name">
                        <h3>${{gig.price}} Order Details</h3>
                        <a href="/checkout/single-package/{{gig.id}}" class="btn btn-success">Procedd to order</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>