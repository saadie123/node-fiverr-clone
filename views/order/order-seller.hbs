<div class="container">
    <h1 class="text-center">Manage Orders</h1>
    <div class="row">
        <div class="overview">
            <div class="list-orders-card">
                <div class="table-margin">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Gig</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                                <tr>
                                    <td>
                                        <img src="{{gig.picture}}" class="order-image-my-gig">
                                        <span>{{gig.title}}</span>
                                    </td>
                                    <td>${{ gig.price }}</td>
                                    <td><button class="btn btn-warning">In progress</button></td>
                                    <td><a href="/users/{{ seller._id }}/orders/{{_id}}" class="btn btn-warning">Chat with buyer</a></td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>